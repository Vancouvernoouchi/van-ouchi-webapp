{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "email": {
      "type": "string"
    },
    "agency": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::agent.agent"
    },
    "description": {
      "type": "text"
    },
    "blogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.blog",
      "mappedBy": "author"
    },
    "bloom_news": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::bloom-news.bloom-news",
      "mappedBy": "author"
    }
  }
}
