{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "targetParticipant": {
      "type": "string",
      "required": true,
      "unique": false,
      "default": "全員"
    },
    "datetime": {
      "type": "datetime",
      "required": true
    },
    "entryFee": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "entryFeeDescription": {
      "type": "text"
    },
    "isOnline": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "placeName": {
      "type": "string"
    },
    "placeAddress": {
      "type": "string"
    },
    "maxParticipant": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "organizer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::event-organizer.event-organizer",
      "inversedBy": "events"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event-category.event-category",
      "inversedBy": "events"
    },
    "applyMethod": {
      "type": "string",
      "required": true
    },
    "faq": {
      "type": "component",
      "repeatable": true,
      "component": "common.faq"
    }
  }
}
